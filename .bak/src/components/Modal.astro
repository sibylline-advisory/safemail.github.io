---
const {id, open} = Astro.props;
---

<dialog id={id}>
    <slot name="main" />
    <form method="dialog">
      <slot name="close" />
    </form>
</dialog>

<button onclick={`window.${id}.showModal()`}>{open}</button>


  <!-- doing it without scss -->
<style>
    dialog {
    text-align: center;
    border: 1px solid #fff ;
    border-radius: 0.5rem;
    position: fixed;
    top: calc(0vh - 40%);
    max-width: 700px ; /* Enforcing max width slightly lower than max width of entire parent element */ 
    width: 60%;
    text-shadow: none;
  }
  dialog::backdrop {
    position: fixed;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    background: rgba(26, 29, 57, 0.35);
  }

  p{
    color: #2B3B3E !important;
  }
  .icon-copy{
    width:16px;
    height: 16px;
    background-color: #000;
    background-image: url("data:image/svg+xml,%3Csvg stroke='currentColor' fill='none' stroke-width='2' viewBox='0 0 24 24' stroke-linecap='round' stroke-linejoin='round' class='h-4 w-4' height='1em' width='1em' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2'%3E%3C/path%3E%3Crect x='8' y='2' width='8' height='4' rx='1' ry='1'%3E%3C/rect%3E%3C/svg%3E");
  }

  @media only screen and (max-width:600px) {
    dialog{
        top: calc(0vh - 8%);
        max-width: 390px;
        width: 95%;
    }
  }

</style>
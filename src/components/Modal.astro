---
const {id, open} = Astro.props;
---

<dialog id={id}>
    <slot name="main" />
    <form method="dialog">
      <slot name="close" />
    </form>
</dialog>

<button onclick={`window.${id}.showModal()`}>{open}</button>


  <!-- doing it without scss -->
<style>
    dialog {
    text-align: center;
    border: 1px solid #fff ;
    border-radius: 0.5rem;
    position: fixed;
    top: calc(0vh - 40%);
    max-width: 700px ; /* Enforcing max width slightly lower than max width of entire parent element */ 
    width: 60%;
    text-shadow: none;
  }
  dialog::backdrop {
    position: fixed;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    background: rgba(93, 93, 93, 0.19);
  }
</style>




